<cu-custom bgColor="bg-gradual-pink" isBack="{{true}}">
	<!-- <view slot="backText">返回</view> -->
	<view slot="content">test</view>
</cu-custom>
<scroll-view scroll-x class="bg-white nav">
  <view class="flex text-center">
    <view class="cu-item flex-sub {{index==xnCur?'text-orange cur':''}}" wx:for="{{xn}}" wx:key bindtap="xnSelect" data-id="{{index}}">
      {{item}}
    </view>
  </view>
</scroll-view>

<scroll-view scroll-x class="bg-white nav">
  <view class="flex text-center">
    <view class="cu-item flex-sub {{index==xqCur?'text-orange cur':''}}" wx:for="{{xq}}" wx:key bindtap="xqSelect" data-id="{{index}}">
      {{item}}
    </view>
  </view>
</scroll-view>
<form>
	<view class="cu-form-group">
		<view class="title">账号</view>
		<input placeholder="账号" id="username" bindblur='saveChange'></input>
	</view>
  <view class="cu-form-group">
		<view class="title">密码</view>
		<input placeholder="密码" password="true" id="password" bindblur='saveChange'></input>
	</view>
  <view class="cu-form-group">
		<view class="title">验证码</view>
		<input placeholder="验证码" id="yzm" bindblur='saveChange'></input>
	</view>
  <view style="width:100%;display:flex;align-items:center;justify-content:center">
    <image src="{{yzmSrc}}" wx:if="{{yzmLoad}}" style="width:200px;height:100px"></image>
    <view wx:if="{{!yzmLoad}}">验证码加载中...</view>
  </view>
  <view style="width:100%;display:flex;align-items:center;justify-content:center">
    <image src="{{scoreSrc}}" wx:if="{{scoreLoad}}" style="width:100vw;height:25vh" bindtap="showImg"></image>
    <view wx:if="{{!scoreLoad&&alreadySubmit}}">成绩加载中...</view>
    <view wx:if='{{err}}'>{{errMsg}}</view>
  </view>
<view class="padding flex flex-direction" style="position:absolute;bottom:20px;left:0px;right:0px;">
  <button class="cu-btn bg-grey lg" style="width:100%" bindtap="queryScore">提交</button>
  <!-- <button class="cu-btn bg-red margin-tb-sm lg">嫣红</button> -->
</view>
</form>